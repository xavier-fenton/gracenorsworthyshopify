{% assign page = pages.about %}

<div class="about-section-wrapper">
 <div class="about-main-info-wrapper">
              <div class="about-page-title">*{{ page.title }}</div>
              <div class="custom-block-main-wrapper">
            {% for block in section.blocks %}
                    <div class="custom-block-description-wrapper">
                    
                      <div class="custom-block-description-text">{{ block.settings.description_text }} </div>

                  </div>
                {% endfor %}
                </div>
                <div></div>
            </div>

        {% if section.settings.image_1 %} 
          {% comment %} <div class="about-section-image">{{ section.settings.image_1 | image_url: width: 450 | image_tag }}</div> {% endcomment %}
          {% comment %} <div class="about-section-image" style="background-image: url('{{ section.settings.image_1 | image_url }}')"></div> {% endcomment %}

         
      {% else %} 
          
        <span></span>

        {% endif %}
        
</div>




{% schema %}
  {
    "name": "About Content",
    "settings":[
      {
        "type": "image_picker",
        "id": "image_1",
         "label": "Display an Image: This will display at top of page have a play around"
      }
    ],
    "max_blocks": 5,
    "blocks": [ {
      "name": "Description Paragraph",
       "type": "text",
      "settings": [
        { 
          "type": "textarea",
          "id": "description_text",
          "label": "Description: This is like paragraph by paragraph."
        }
        
      ]
    }
    ],
    "presets": [
      {
        "name": " About Page Content",
        "category": "Content"
      }
    ]
      
  }
  
{% endschema %}


