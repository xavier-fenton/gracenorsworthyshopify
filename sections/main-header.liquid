


<ul class="nav-links">

{% assign full_url = request.path %}
{% assign type = request.page_type %}


{% for link in linklists.main-menu.links %}

    {% if link.url == full_url %}

      <div>
        <a class="highlighted" href="{{ link.url }}">{{ link.title }}</a>

      </div>
      {% elsif  type == 'collection' and link.title == 'Shop'%}
        <div>
        <a class="highlighted" href="{{ link.url }}">{{ link.title }}</a>

      </div>
        
    {% else %}
      <div>
      <a href="{{ link.url }}">{{ link.title }}</a>
      {% comment %} {{ type }} {% endcomment %}
     
    </div>
    {% endif %}
    

  {% endfor %}
</ul>
{% if cart.item_count > 0 %}
  <div class="cart-link">
    <a href="/cart">{{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }} ({{ cart.total_price | money }})</a>
    <a href="/cart">Check out</a>
{% elsif cart.item_count < 0 %}

  {% endif %}

</div>