{% if cart.item_count == 0 %}

 
 <div class="floating-cart-wrapper">
      <div class="exit-cart">
            <a data-ajax-cart-toggle-class-button="js-my-cart-open" class="exit-the-cart" href="{{ routes.cart_url }}"><strong>EXIT</strong></a>
            <div>CART</div>
      </div>
        <div class="ajax-cart-styling" data-ajax-cart-section >
            Sorry no items!
        </div>
 
 </div> 

{% elsif cart.item_count != 0 %}


 <div class="floating-cart-wrapper" >

  <div class="exit-cart">
    <a data-ajax-cart-toggle-class-button="js-my-cart-open" class="exit-the-cart" href="{{ routes.cart_url }}"><strong>EXIT</strong></a>
    <div>CART</div>
  </div>
  <div class="ajax-cart-styling" data-ajax-cart-section >


  <form
    action="{{ routes.cart_url }}"
    method="post"
    class="my-cart"
  >
    <!--
      data-ajax-cart-section makes the element's HTML update
      when the cart gets changed
    -->

      <!--
        data-ajax-cart-section-scroll keeps the scroll position unchanged
        when the element's HTML is changed
      -->
      <div class="my-cart__items" data-ajax-cart-section-scroll>
        {% for item in cart.items %}

          
          
          {% assign item_index = forloop.index %}
        
        
                        
                          <div class="inner-cart-block">
                            <img
                              class="product-image-in-cart"
                              src="{{ product.featured_image.src | img_url: '500x500', format: 'pjpg' }}"
                              loading="lazy"
                            />


                            <div class="inner-wrapper-cart__items">
                              <div class="in-cart-description">
                                <span class="title-in-cart-desc">Title: </span>
                                <a href="{{ item.url }}">{{ item.title }}</a>
                              </div>

                              {% comment %} {% for property in item.properties %}
                                <div>
                                  {{ property.first }}:
                                  {% if property.first == 'Engraving' %}
                                    <!-- data-ajax-cart-property-input ajaxifies the line item property input -->
                                    <input
                                      type="text"
                                      value="{{ property.last }}"
                                      data-ajax-cart-property-input="{{ item_index }}[{{ property.first }}]"
                                    >
                                  {% else %}
                                    {{ property.last }}
                                  {% endif %}
                                </div>
                              {% endfor %} {% endcomment %}

                              <div class="in-cart-description">
                                <span class="price-in-cart-desc">Price: </span>
                              
                              <div> <strong>{{ item.final_price | money }}</strong></div>
                              </div>
                              <div class="quatity-main">
                                <span class="quantity-in-cart-desc">Quantity:</span>
                                <div class="cart-quantity-wrapper">
                                  <!-- data-ajax-cart-request-button ajaxifies the "Minus one" button -->
                                  <div data-ajax-cart-section="">
                                    <a
                                      data-ajax-cart-request-button
                                      href="{{ routes.cart_change_url }}?line={{ item_index }}&quantity={{ item.quantity | plus: 1 }}"
                                    >
                                      +
                                    </a>

                                    <!-- data-ajax-cart-quantity-input ajaxifies the line item quantity input -->
                                    <input
                                      class="quantity-input-bar"
                                      data-ajax-cart-quantity-input="{{ item_index }}"
                                      name="updates[]"
                                      value="{{ item.quantity }}"
                                      type="number"
                                    >

                                    <!-- data-ajax-cart-request-button ajaxifies the "Plus one" button -->
                                    <a
                                      data-ajax-cart-request-button
                                      href="{{ routes.cart_change_url }}?line={{ item_index }}&quantity={{ item.quantity | minus: 1 }}"
                                    >
                                      -
                                    </a>
                                  </div>

                                  {% comment %}
                                    <a data-ajax-cart-request-button href="{{ item.url_to_remove }}">
                                      Remove
                                    </a>
                                  {% endcomment %}
                                </div>
                                
                              
                              </div>

                              <!-- Container for errors -->
                              <div data-ajax-cart-messages="{{ item.key }}"></div>

                              <div class="in-cart-description" >
                                <span class="total-in-cart-desc" > Total: </span>
                                <strong>{{ item.final_line_price | money }}</strong>
                              </div>
                              <a data-ajax-cart-request-button href="{{ item.url_to_remove }}">
                                  Remove
                                </a>
                            </div>
                          </div>
        {% endfor %}
      </div>


    


      <!--
        data-ajax-cart-static-element keeps the container unchanged
        when the cart and the surrounding HTML get updated
      -->
      <div data-ajax-cart-static-element class="my-cart__app-container"></div>
    </div>
    <div class="checkout-btn ">
      <button
        class="button-4"
        role="button"
        type="submit"
        name="checkout"
      >
        Checkout â€” {{ cart.total_price | money_with_currency }}
      </button>
    </div>
    
  </form> </div>

{% endif %}

{% schema %}
{
  "name": "My Cart"
}
{% endschema %}




